<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:onClick="onPerson1Click">

    <TextView android:text="My People:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PersonIndicator"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/GoToSecond"
        android:layout_marginStart="47dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/Person1"
        android:layout_below="@+id/PersonIndicator"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/PersonIndicator" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/Person2"
        android:onClick="onPerson2Click"
        android:layout_below="@+id/Person1"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/Person1" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/Person3"
        android:onClick="onPerson3Click"
        android:layout_below="@+id/Person2"
        android:layout_alignStart="@+id/Person2"
        android:layout_alignEnd="@+id/Person2" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/Test"
        android:onClick="onTestClick"
        android:textOn="Got it!"
        android:textOff="What is the emotion?"
        android:layout_below="@+id/GoToSecond"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train Person"
        android:id="@+id/GoToSecond"
        android:layout_below="@+id/Person1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Test"
        android:onClick="goToTrain" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emotion"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Person3"
        android:layout_below="@+id/Person3" />

</RelativeLayout>
